<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:tvm="clr-namespace:Kotomi.ViewModels.Reader;assembly=Kotomi"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Kotomi.Views.Reader.TwoPageView"
             x:DataType="tvm:TwoPageViewModel">
  <Grid ColumnDefinitions="*,*">
    <ContentControl Grid.Column="0" Content="{Binding LeftImage}"/>
    <ContentControl Grid.Column="1" Content="{Binding RightImage}"/>
  </Grid>
</UserControl>
